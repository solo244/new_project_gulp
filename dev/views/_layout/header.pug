- var pkg = require("./package.json");
- var $path = "/"; // + pkg.paths.dist.online_folder;
- var $name = '' + pkg.name;
- var $description = '' + pkg.description;
- var $analytics = "'" + pkg.google + "'";

// General
meta(charset="UTF-8")
meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1")

// Google / Search Engine Tags
meta(itemprop="name", content=$name)
meta(itemprop="description", content=$description)
meta(itemprop="image", content="")

// Favicon
link(rel="apple-touch-icon", sizes="180x180", href=$path + "favicon/apple-touch-icon.png")
link(rel="icon", type="image/png", href=$path + "favicon/favicon-32x32.png", sizes="32x32")
link(rel="icon", type="image/png", href=$path + "favicon/favicon-16x16.png", sizes="16x16")
link(rel="manifest", href=$path + "favicon/manifest.json")
link(rel="mask-icon", href=$path + "favicon/safari-pinned-tab.svg", color="#ffffff")
meta(name="theme-color", content="#ffffff")

// Stylesheets
link(rel="preload", href=$path + "css/style.min.css", as="style", onload="this.rel='stylesheet'")
noscript
  link(rel="stylesheet", href=$path + "css/style.min.css")
link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Karla:400,400i,700,700i")

// Facebook Meta Tags
meta(property="og:url", content=pkg.url.live)
meta(property="og:type", content="website")
meta(property="og:title", content=$name)
meta(property="og:description", content=$description)
meta(property="og:image", content="")

// Twitter Meta Tags
meta(name="twitter:card", content="summary_large_image")
meta(name="twitter:title", content=$name)
meta(name="twitter:description", content=$description)
meta(name="twitter:image", content="")

// Google analytics
if $analytics !== "''"
  script.
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', !{$analytics}, 'auto');
    ga('send', 'pageview');
